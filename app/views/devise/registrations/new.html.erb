<h2>アカウント登録</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: "on" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username,
                label: "ユーザーネーム",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "username", placeholder: "例: tanaka123" } %>

    <%= f.input :email,
                label: "メールアドレス",
                required: true,
                input_html: { autocomplete: "email", placeholder: "例: example@example.com" } %>

    <%= f.input :password,
                label: "パスワード",
                required: true,
                hint: ("#{@minimum_password_length}文字以上で入力してください" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: "6文字以上" } %>

    <%= f.input :password_confirmation,
                label: "パスワード（確認）",
                required: true,
                input_html: { autocomplete: "new-password", placeholder: "もう一度入力" } %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, "登録する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
