<h1>メニュー一覧</h1>

<% if user_signed_in? %>
  <%= link_to "新規メニュー登録", new_menu_path, class: "btn btn-primary" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>説明</th>
      <th>価格</th>
      <th>登録者</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= link_to menu.name, menu_path(menu) %></td>
        <td><%= menu.description %></td>
        <td><%= number_to_currency(menu.price, unit: "¥") %></td>
        <td><%= menu.user.username %></td>
        <% if user_signed_in? && menu.user == current_user %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
