<h1 class="mb-4">新規メニュー登録</h1>

<%= simple_form_for([@shop, @menu]) do |f| %>
  <div class="mb-3">
    <%= f.input :name, label: "メニュー名", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :description, label: "説明", as: :text, input_html: { rows: 3, class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :price, label: "価格 (円)", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :protein, label: "タンパク質量 (g)", input_html: { class: "form-control" } %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to "戻る", shop_path(@shop), class: "btn btn-secondary" %>
    <%= f.button :submit, "登録する", class: "btn btn-primary" %>
  </div>
<% end %>
